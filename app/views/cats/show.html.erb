<table>
  <tr>
    <th>Name</th>
    <th>Birth Date</th>
    <th>Color</th>
    <th>Sex</th>
    <th>Description</th>
  </tr>
  <tr>
    <td><%= @cat.name %></td>
    <td><%= @cat.birth_date %></td>
    <td><%= @cat.color %></td>
    <td><%= @cat.sex %></td>
    <td><%= @cat.description %></td>
  </tr>
</table>

<br><br>
<h3>Rental Requests for <%= @cat.name %>:</h3>
<table>
  <tr>
    <th>Start date</th>
    <th>End date</th>
    <th>Status</th>
  </tr>
  <% @current_rental_requests.each do |request| %>
    <tr>
      <td><%= request.start_date %></td>
      <td><%= request.end_date %></td>
      <td><%= request.status %></td>
      <% if request.status == "PENDING" %>
      <td><form action="/cat_rental_requests/<%= request.id %>/approve" method="get">
        <input type="submit" value="Approve">
      </form></td>
      <td><form action="/cat_rental_requests/<%= request.id %>/deny" method="get">
        <input type="submit" value="Deny">
      </form></td>
      <% end %>
    </tr>
  <% end %>
</table>