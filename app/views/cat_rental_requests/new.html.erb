<h1>Create a rental request</h1>

<form action="<%= cat_rental_requests_url %>" method="post">

  <label for="cat">Select a cat:</label>
  <select name="cat_rental_request[cat_id]" id="cat">
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>%"><%= cat.name %></option>
    <% end %>
  </select>

  <br>
  <br>
  <label for="start_date">Start date:</label>
  <input type="date" name="cat_rental_request[start_date]" id="start_date">

  <br>
  <br>
  <label for="end_date">End date:</label>
  <input type="date" name="cat_rental_request[end_date]" id="end_date">

  <br>
  <br>
  <input type="submit" value="Create Request">

</form>